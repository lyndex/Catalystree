//                    transaction.addToBackStack(null);
//
//                    transaction.commit();
//                }}
//
//        Bwalk = (Button) myView.findViewById(R.id.b_walk);
//        Btransit.setOnClickListener(new View.OnClickListener() {
//            @Override
//            public void onClick(View v) {
//                Fragment newFragment = new FCar();
